@namespace Softsplit.UI
@attribute [StyleSheet]
@inherits PanelComponent

<root class="@(IsOpen ? "open" : "")">
    <Toast />
    <PauseMenuRoot />
</root>

@code
{
    private bool IsOpen = false;

    protected override void OnUpdate()
    {
        if ( Input.EscapePressed )
        {
            Input.EscapePressed = false;
            IsOpen = !IsOpen;
            StateHasChanged();
        }
    }
}
