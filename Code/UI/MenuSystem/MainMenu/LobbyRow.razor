@inherits Panel
@namespace Softsplit.UI

<style>
    LobbyRow
    {
        &.dev
        {
            background-color: orange;
        }
    }
</style>

<root class="button standard layout column @(Lobby.IsEditorLobby ? "dev" : "")">
    <div class="row layout gap">
        <label>@(Lobby.Name)'s game</label>
        <div class="layout flex-grow" />
        <label>@(Lobby.Members)/@(Lobby.MaxMembers)</label>
    </div>

    <div class="row layout gap">
        @if ( Lobby.IsEditorLobby )
        {
            <label class="icon" style="color:orange;">api</label>
        }
        <div class="layout flex-grow" />
        de_garry
    </div>
</root>

@code
{
    public Lobby Lobby { get; set; }
}
